#!/bin/sh
for mod in "$(dirname "$0")"/modules/*.drpc; do
	. "$mod"
done

while true; do
	m_mpris="$(f_mpris)"

	if [ -n "$DEBUG" ]; then
		echo "$m_mpris"
	else
		cat <<EOF
	[ \
	    { \
	        "application_id": ${CONF_DISCORD_APPID}, \
	        "state": "ðŸŽµ: $(echo "${m_mpris}" | jq -r .pretty)", \
	        "details": "ðŸ‘€: $(f_wl_active_app)", \
	        "large_image": { \
	            "key": "$(echo "${m_mpris}" | jq -r .hash)", \
	            "text": "$(echo "${m_mpris}" | jq -r .artist) - $(echo "${m_mpris}" | jq -r .title)" \
	        }, \
	        "small_image": null, \
	        "buttons": [] \
	    } \
	]
EOF
	fi

	sleep "${CONF_INTERVAL:-1}"
done
